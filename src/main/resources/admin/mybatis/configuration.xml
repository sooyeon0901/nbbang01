<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- https://mybatis.org/mybatis-3/ko/index.html -->
<!-- myBatis 환경설정파일 
	1]데이타베이스 연결정보 설정 
	2]매퍼파일의 위치정보 설정 -->
<configuration>

	<!--마이바티스에서 사용할 .properties(리소스파일) 설정 -->
	<!-- 
	properties태그가 typeAliases태그보다 위에 위치
	 -->	
	<!-- 클래스 별칭 설정 -->	
	  
	<typeAliases>
		<typeAlias type="com.kosmo.nbbang.admin.service.AdminMemberDTO" alias="adminMember"/>
		<typeAlias type="com.kosmo.nbbang.partykang.service.PartyChatDTO" alias="chat"/>		
		<!-- LineCommentDTO는 별칭 불필요. SELECT결과를 Map에 저장하기때문에 -->
	</typeAliases>
	
	<!-- 매퍼파일(SQL쿼리 결과와 자바빈 매핑)의 위치정보 설정 -->	  
	<mappers>
		<mapper resource="admin/mybatis/mapper/admin.xml" />
		<mapper resource="admin/mybatis/mapper/chat.xml" />
	</mappers>
</configuration>